.user-meta
  = image_tag 'hermes-logo.png', class: 'logo'
  %h3 Hermes
  %h4 Forgot your password?
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    .control-group
      .controls
        = f.email_field :email, :autofocus => true, placeholder: 'email...', class: 'input-block-level'
    = f.button "Send reset password link", class: "btn input-block-level"
  = render "devise/shared/links"
