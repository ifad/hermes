.user-meta
  .user-meta-head.animated.fadeInUp
    = logo_big
    %h3 Hermes
    %h4 Sign up
  .user-meta-content.animated.zoomInUp
    = form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
      = devise_error_messages!
      .form-group
        = f.email_field :email, :autofocus => true, placeholder: 'email', class: 'form-control input-lg input-transparent'
      .form-group
        = f.password_field :password, placeholder: 'password', class: 'form-control input-lg input-transparent'
      .form-group
        = f.password_field :password_confirmation, placeholder: 'password confirmation', class: 'form-control input-lg input-transparent'
      .form-group
        = f.button "Sign up", class: 'btn btn-block btn-success'
    = render 'devise/shared/links'
