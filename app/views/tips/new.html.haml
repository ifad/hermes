.tip-edit{data: {view: 'tip-edit'}}
  = form_for @tip, :url => site_tips_path(@site), html: { role: 'form' } do |f|
    = hidden_field_tag :tutorial_id, @tutorial.id if @tutorial
    %fieldset
      %legend
        = title @tutorial ? "Tutorial #{@tutorial.title} (#{@site.name} site)" : "Site #{@site.name}", "New message"
      = render 'form', :f => f
