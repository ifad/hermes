%tr{"data-id" => tip.id, :id => dom_id(tip)}
  %td
    %i.fa.fa-reorder
    = link_to tip.title, edit_tip_link(tip)
  - unless @tutorial
    %td= l tip.published_at
    %td= l tip.unpublished_at
  %td
    .btn-group
      = link_to "http://#{@site.hostname}#{tip.path}#hermes-preview,#{message_path(tip.class.model_name.param_key, tip.id)}", class: 'btn btn-default btn-sm', target: '_blank' do
        %i.fa.fa-eye
      = link_to edit_tip_link(tip), class: 'btn btn-default btn-sm' do
        %i.fa.fa-edit
      = link_to destroy_tip_link(tip), remote: true, method: :delete, :'data-confirm' => 'This action will delete your message.', class: 'btn btn-default btn-sm' do
        %i.fa.fa-remove
