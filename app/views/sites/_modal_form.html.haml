.modal-header
  %button.close{"data-dismiss" => "modal", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
    %span.sr-only Close
  %h4.modal-title Edit an existing site
= form_for site, method: :put, remote: true do |f|
  .modal-body
    .form-group
      = f.text_field :name, { :class => 'form-control input-lg input-transparent', placeholder: 'Name' }
      %p.form-control-help Edit the name of the site.
    .form-group
      = f.text_field :hostname , { :class => 'form-control input-lg input-transparent', placeholder: 'Address' }
      %p.form-control-help Edit the URL for the site.
    .form-group
      %span.help-block
        Hint: don't forget to add the
        %code hermes.js
        script to your site!
  .modal-footer
    %button.btn.btn-success
      %i.fa.fa-refresh
      Update site
