.entity.animated.bounceIn
  %h4.entity-title= link_to tutorial.title, site_tutorial_tips_path(@site, tutorial)
  %p.small.courier
    = @site.hostname + tutorial.path
  .list-group-item-actions
    = link_to edit_site_tutorial_path(@site, tutorial), class: 'btn btn-primary btn-xs' do
      %i.fa.fa-pencil
    = link_to site_tutorial_path(@site, tutorial), remote: true, method: :delete, :'data-confirm' => 'This action will delete your tutorial.', class: 'btn btn-danger btn-xs' do
      %i.fa.fa-trash
  %p
    = link_to pluralize(tutorial.tips.count, 'tip'), site_tutorial_tips_path(@site, tutorial)
    = link_to 'new', site_tutorial_tips_path(@site.id, tutorial.id), class: 'btn btn-xs btn-primary'
  %p.small.text-center.entity-publication-range
    %i.glyphicon.glyphicon-time
    = "#{l tutorial.published_at} - #{l tutorial.unpublished_at}"
